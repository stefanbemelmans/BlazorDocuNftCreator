<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RestoreAdditionalProjectSources>
      https://dotnet.myget.org/F/aspnetcore-dev/api/v3/index.json;
      https://dotnet.myget.org/F/blazor-dev/api/v3/index.json;
    </RestoreAdditionalProjectSources>
    <Description>Blazor Hosted Client</Description>
    <RazorLangVersion>3.0</RazorLangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Features\Nft\Components\NewNftTemplateForm.razor.cs" />
    <Compile Remove="Pages\AssetNtfPage.razor.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Features\Nft\Components\NewNftTemplateForm.razor.cs" />
    <Content Include="Pages\AssetNtfPage.razor.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Blazor-State" Version="$(BlazorStateVersion)" />
